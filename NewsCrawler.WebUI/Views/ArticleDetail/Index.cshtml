@model NewsCrawler.WebUI.Models.ArticleDetail

<div class="row">
    <div class="col-md">
        <h2>Article: @Model.Id</h2>
    </div>
</div>
<div class="row">
    <h3>@Model.Title</h3>
    <div class="col-md">

        <div class="form-group">
            <label for="Link" class="control-label col-sm-3">Link:</label>
            <div class="form-control-static col-sm-7">
                <label><a href="@Model.Link">@Model.Link</a></label>
            </div>
        </div>


        <div class="form-group">
            <label for="NewsSource" class="control-label col-sm-3">News Source:</label>
            <div class="form-control-static col-sm-7">
                <label>@Model.NewsSource</label>
            </div>
        </div>

        <div class="form-group">
            <label for="IsIndexPage" class="control-label col-sm-3">Index page:</label>
            <div class="form-control-static col-sm-7">
                <label>@Model.IsIndexPage</label>
            </div>
        </div>
    </div>

    <div class="col-md">
        <div class="form-group">
            <label for="PublishedDate" class="control-label col-sm-3">Published Date:</label>
            <div class="form-control-static col-sm-7">
                <label>@Html.DisplayFor(m => Model.PublishedDate)</label>
            </div>
        </div>

        <div class="form-group">
            <label for="RecordedDate" class="control-label col-sm-3">Recorded Date:</label>
            <div class="form-control-static col-sm-7">
                <label>@Html.DisplayFor(m => Model.RecordedDate)</label>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md">
        <tt style="white-space: pre-line">@Model.CleanedContent</tt>
    </div>
</div>
<hr />
@if (Model.DocumentScannerError)
{
    <div class="row">
        <div class="col-md">
            <div class="alert alert-danger" role="alert">
                Failed to load data from document scanner.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md">
            <h3>Proper nouns in the article</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Frequency</th>
                        <th scope="col">Noun</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var noun in Model.Nouns)
                    {
                        <tr>
                            <td>@noun.Frequency</td>
                            <td>@noun.Word</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
