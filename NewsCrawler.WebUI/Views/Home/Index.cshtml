@model NewsCrawler.WebUI.Models.ArticleResult

<div class="row">
    <div class="col-md">
        <h2>Archived Articles</h2>

        <div>
            <h3>Search</h3>
            <form method="get" asp-controller="Home" asp-action="Index">
                <input name="searchTerm" type="text" value="@Model.SearchTerm" />

                <select size="@Model.NewsSources.Count()" name="newsSources" multiple="multiple" id="lstNewsSourcesCount">
                    @foreach (var newsSource in Model.NewsSources)
                    {
                        @if (Model.SelectedNewsSources?.Contains(newsSource) == true)
                        {
                            <option value="@newsSource" selected>@newsSource</option>
                        }
                        else
                        {
                            <option value="@newsSource">@newsSource</option>
                        }
                    }
                </select>
            </form>
        </div>

        <div>
            Showing @Model.ArticleCount results.
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date Published</th>
                    <th scope="col">Date Recorded</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.ArticleList)
                {
                    <tr>
                        <td>@article.NewsSource</td>
                        <td><a href="@article.Link" target="_blank">@article.Title</a></td>
                        <td>@Html.DisplayFor(m => article.PublishedDate)</td>
                        <td>@Html.DisplayFor(m => article.RecordedDate)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <nav aria-label="Page navigation example">
        <ul class="pagination flex-wrap">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-page="@(Model.Page - 1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            }
            @foreach (int i in Enumerable.Range(1, Model.TotalPages))
            {
                if (i == Model.Page)
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-controller="Home"
                           asp-action="Index"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Home"
                           asp-action="Index"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-page="@i">@i</a>
                    </li>
                }
            }
            @if (Model.Page < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-page="@(Model.Page + 1)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            }
        </ul>
    </nav>
</div>
